# ~/.skhdrc

cmd + shift - a : chunkc tiling::desktop --layout bsp
cmd + shift - s : chunkc tiling::desktop --layout monocle
cmd + shift - d : chunkc tiling::desktop --layout float
cmd + shift - r : chunkc tiling::desktop --rotate 90

cmd + shift - j : chunkc tiling::window --focus prev
cmd + shift - k : chunkc tiling::window --focus next

cmd + shift - f : chunkc tiling::window --toggle fullscreen
ctrl + shift - f : chunkc tiling::window --toggle native-fullscreen

cmd + shift - space : chunkc tiling::desktop --equalize

alt + shift - a : chunkc tiling::window --use-temporary-ratio 0.03 --adjust-window-edge west
alt + shift - s : chunkc tiling::window --use-temporary-ratio 0.03 --adjust-window-edge south
alt + shift - w : chunkc tiling::window --use-temporary-ratio 0.03 --adjust-window-edge north
alt + shift - d : chunkc tiling::window --use-temporary-ratio 0.03 --adjust-window-edge east

ctrl + shift - a : chunkc tiling::window --use-temporary-ratio -0.03 --adjust-window-edge west
ctrl + shift - s : chunkc tiling::window --use-temporary-ratio -0.03 --adjust-window-edge south
ctrl + shift - w : chunkc tiling::window --use-temporary-ratio -0.03 --adjust-window-edge north
ctrl + shift - d : chunkc tiling::window --use-temporary-ratio -0.03 --adjust-window-edge east

cmd + shift - c : chunkc tiling::window --send-to-desktop next
cmd + shift - z : chunkc tiling::window --send-to-desktop prev
cmd + shift - 1 : chunkc tiling::window --send-to-desktop 1
cmd + shift - 2 : chunkc tiling::window --send-to-desktop 2
cmd + shift - 3 : chunkc tiling::window --send-to-desktop 3
cmd + shift - 4 : chunkc tiling::window --send-to-desktop 4
cmd + shift - 5 : chunkc tiling::window --send-to-desktop 5
cmd + shift - 6 : chunkc tiling::window --send-to-desktop 6
cmd + shift - 7 : chunkc tiling::window --send-to-desktop 7
cmd + shift - 8 : chunkc tiling::window --send-to-desktop 8
cmd + shift - 9 : chunkc tiling::window --send-to-desktop 9

cmd + shift - left : chunkc tiling::monitor -f prev
cmd + shift - right : chunkc tiling::monitor -f next

cmd + shift - return : open -na /Applications/iTerm.app
