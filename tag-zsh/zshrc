# ~/.zshrc

setopt correct
setopt extended_glob
setopt extended_history
setopt hist_ignore_dups
setopt hist_reduce_blanks
setopt inc_append_history
setopt interactive_comments
setopt no_clobber
setopt no_flow_control
setopt rm_star_wait

typeset -U fpath
fpath=($HOME/.zsh/functions $fpath)

typeset -U path
path=(
    $HOME/bin(N)
    $HOME/.local/bin
    $HOME/.cabal/bin(N)
    /opt/homebrew/bin(N)
    /opt/texlive/bin/*(N)
    $path
)

autoload -Uz promptinit
promptinit
prompt srs

autoload -Uz compinit
compinit

zstyle ':completion:*' auto-description 'specify: %d'
zstyle ':completion:*' completer _expand _complete _correct _approximate
zstyle ':completion:*' format ' %F{cyan}-- %d --%f'
zstyle ':completion:*' group-name ''
zstyle ':completion:*' menu select=2
zstyle ':completion:*:default' list-colors ${(s.:.)LS_COLORS}
zstyle ':completion:*' list-colors ''
zstyle ':completion:*' list-prompt %SAt %p: Hit TAB for more, or the character to insert%s
zstyle ':completion:*' matcher-list '' 'm:{a-z}={A-Z}' 'm:{a-zA-Z}={A-Za-z}' 'r:|[._-]=* r:|=* l:|=*'
zstyle ':completion:*' menu select=long
zstyle ':completion:*' select-prompt %SScrolling active: current selection at %p%s
zstyle ':completion:*' use-compctl false
zstyle ':completion:*' verbose true

bindkey "\e[Z" reverse-menu-complete
bindkey "^R" history-incremental-search-backward

HISTFILE=$HOME/.zsh_history
HISTSIZE=10000
SAVEHIST=10000

if [[ ! -d "$TMPDIR" ]]; then
    export TMPDIR=/tmp/$LOGNAME
    mkdir -p -m 700 $TMPDIR
fi

export EDITOR=vim
export GPG_TTY="$(tty)"
export HOMEBREW_NO_GITHUB_API=
export LESS=FiRX
export VISUAL=vim

if ls --color -d . > /dev/null 2>&1; then
    alias ls="ls --color=auto -h"
elif ls -Gd . > /dev/null 2>&1; then
    alias ls="ls -Gh"
fi
alias ll="ls -l"
alias la="ll -A"

alias gad="git add"
alias gap="git add --patch"
alias gbr="git branch"
alias gci="git commit --verbose"
alias gcl="git clone"
alias gco="git checkout"
alias gdc="git diff --cached"
alias gdi="git diff"
alias gdw="git diff --word-diff"
alias gll="git log --decorate --graph"
alias glp="git log --decorate --graph --patch"
alias gls="git log --decorate --format=gls --graph"
alias gmv="git mv"
alias gpl="git pull"
alias gps="git push"
alias grm="git rm"
alias gst="git status --branch --short"

alias ag="ag --pager less"
alias cp="cp -i"
alias fig="find . | ag"
alias muc="history 1 | awk '{print \$2}' | sort | uniq -c | sort -nr | head -n 20"
alias mv="mv -i"
alias rm="rm -i"
alias tree="tree -C"

[[ -f ~/.zshrc-local ]] && source ~/.zshrc-local
