# ~/.zshenv

typeset -U path
path=(~/{,.local/,.cabal/}bin(N)
      /opt/texlive/2014/bin/x86_64-{darwin,linux}(N)
      $path)

if [[ ! -d "$TMPDIR" ]]; then
    export TMPDIR="/tmp/$LOGNAME"
    mkdir -p -m 700 "$TMPDIR"
fi

export EDITOR="vim"
export VISUAL="vim"
export GNUPGHOME=~/.config/gnupg
export HOMEBREW_NO_GITHUB_API=1
export PAGER="less"
export LESS="-FiLMRX"
export LESSSECURE=1

if [[ -r ~/.local/zshenv ]]; then
    source ~/.local/zshenv
fi
