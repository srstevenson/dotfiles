# ~/.kwm/kwmrc

# Draw border around the focused window.
kwmc config border focused color 0xFFBDD322
kwmc config border focused on
kwmc config border focused radius 4
kwmc config border focused size 1

# Provide padding at the top of the screen for the menu bar, and one pixel at
# each edge for the window border.
kwmc config padding 22 1 1 1

# Provide one pixel gap between containers for the window border.
kwmc config gap 1 1

# Use binary space partioning as the initial tiling mode.
kwmc config tiling bsp

# Automatically float windows that fail to resize.
kwmc config float-non-resizable on

# Float Calculator windows.
kwmc rule properties={float="true"} owner="Calculator"
