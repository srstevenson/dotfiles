# ~/.config/git/config

[user]
    name = Scott Stevenson
    email = scott@stevenson.io

[init]
    defaultBranch = main

[pager]
    diff = diff-highlight | less
    log = diff-highlight | less
    show = diff-highlight | less

[commit]
    verbose = true

[pull]
    ff = only

[fetch]
    prune = true

[rebase]
    autoSquash = true

[pretty]
    dense = %C(auto)%h %s (%C(cyan)%an%C(auto), %C(green)%ar%C(auto))%d

[alias]
    dl = log --format=dense --graph
