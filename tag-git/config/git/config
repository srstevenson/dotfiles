# ~/.config/git/config

[commit]
    gpgSign = true
    verbose = true

[diff]
    indentHeuristic = true

[fetch]
    prune = true

[filter "lfs"]
    clean = git-lfs clean -- %f
    required = true
    smudge = git-lfs smudge -- %f

[log]
    decorate = true

[merge]
    ff = only

[pager]
    diff = diff-highlight | less
    log = diff-highlight | less
    show = diff-highlight | less

[pretty]
    glo = %C(auto)%h %s (%C(green)%an%C(white), %C(cyan)%ar%C(white))%C(auto) %d

[push]
    default = simple

[transfer]
    fsckObjects = true

[user]
    email = scott@stevenson.io
    name = Scott Stevenson
    signingKey = 0xEF25C8864C0618DC
