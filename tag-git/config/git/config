# ~/.config/git/config

[commit]
    gpgSign = true
    verbose = true

[fetch]
    prune = true

[filter "lfs"]
    clean = git-lfs clean -- %f
    process = git-lfs filter-process
    required = true
    smudge = git-lfs smudge -- %f

[help]
    autoCorrect = 5

[log]
    decorate = auto

[pager]
    diff = diff-highlight | less
    log = diff-highlight | less
    show = diff-highlight | less

[pretty]
    glo = %C(auto)%h %s (%C(cyan)%an%C(white), %C(green)%ar%C(white))%C(auto)%d

[transfer]
    fsckObjects = true

[user]
    email = scott@stevenson.io
    name = Scott Stevenson
    signingKey = 0xEF25C8864C0618DC
